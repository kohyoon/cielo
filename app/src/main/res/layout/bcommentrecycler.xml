<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/commentback">

        <TextView
            android:id="@+id/com_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/goyangb"
            android:text="익명 N"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/com_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/com_writer"
            android:fontFamily="@font/goyangb"
            android:text="날짜"
            android:textSize="10dp"></TextView>

        <TextView
            android:id="@+id/com_description"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_writer"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/goyangb"
            android:padding="4dp"
            android:text="댓글내용"
            android:textSize="12dp" />


    </RelativeLayout>

</FrameLayout>

