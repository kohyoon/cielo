<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/edge"
    android:padding="5dp"
    android:layout_margin="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/btitle"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"

            android:hint="제목"
            android:textSize="13dp"
            android:fontFamily="@font/goyangeb"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btitle"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/btext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btitle"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/goyangb"
                android:singleLine="true"
                android:hint="미리보기"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/bcomment"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/btext"
                android:background="@drawable/edge"
                android:padding="5dp"
                android:textSize="11dp"
                android:text="댓글수"></TextView>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
