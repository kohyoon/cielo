<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_centerHorizontal="true"
    android:layout_margin="2dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical">

        <TextView
            android:id="@+id/hbtitle"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"

            android:fontFamily="@font/goyangb"
            android:hint="제목"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hbtext"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/hbtitle"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/goyangb"
            android:hint="미리보기"
            android:singleLine="true"
            android:textSize="12sp"></TextView>

        <TextView
            android:id="@+id/hottheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/hbtitle"
            android:layout_alignEnd="@id/hbcomment"
            android:layout_marginEnd="7dp"
            android:fontFamily="@font/goyangb"
            android:text="게시판"
            android:textColor="#717171"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/hbcomment"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/hbtext"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edge"
            android:fontFamily="@font/goyangb"
            android:padding="5dp"
            android:text="댓글수"
            android:textAlignment="center"
            android:textSize="11sp"></TextView>

    </RelativeLayout>

</FrameLayout>
